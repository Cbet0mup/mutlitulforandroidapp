<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.pavel.multitool">

    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_icon_app"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_icon_app_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MultiTool">
        <activity android:name=".AddNoteActivity"/>
        <activity android:name=".CompassActivity"/>
        <activity android:name=".FlashLigthActivity"/>
        <activity android:name=".GetNoteActivity"/>
        <activity android:name=".MapActivity"/>
        <activity android:name=".RedactNoteActivity"/>
        <activity android:name=".TrashActivity"/>
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>