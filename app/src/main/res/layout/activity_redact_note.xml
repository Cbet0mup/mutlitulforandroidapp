<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColorApp"
    tools:context="com.pavel.multitool.RedactNoteActivity"
    android:gravity="top|center"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/redact_text_lable"
        android:layout_margin="16dp"
        android:textColor="@color/colorPrimaryDark"
        android:padding="10dp"
        android:textAlignment="center"
        android:textSize="27sp"/>

    <EditText
        android:id="@+id/redact_text_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:padding="10dp"/>

    <EditText
        android:id="@+id/redact_text_body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:padding="10dp" />

    <Button
        android:id="@+id/redact_button_save"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:background="@drawable/botton_background"
        android:text="@string/add_new_note_button"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="17sp" />

</LinearLayout>