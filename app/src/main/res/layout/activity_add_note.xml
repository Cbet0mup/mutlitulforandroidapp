<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgoundColorActivity">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.pavel.multitool.AddNoteActivity"
    android:padding="16dp"
    android:background="@drawable/background_image"
    android:gravity="center|top"
    android:orientation="vertical">

    <EditText
        android:id="@+id/add_title_new_note"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:padding="8dp"
        android:inputType="textCapWords"
        android:hint="@string/add_body_new_title"
        android:autofillHints="" />

    <EditText
        android:id="@+id/add_body_new_note"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="top"
        android:inputType="textMultiLine|textCapWords"
        android:lines="5"
        android:hint="@string/add_body_new_top"
        android:padding="8dp"
        android:autofillHints="" />

    <Button
        android:id="@+id/button"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:background="@drawable/botton_background"
        android:onClick="saveNote"
        android:text="@string/add_new_note_button"
        android:textColor="@color/colorButtonText"
        android:textSize="17sp"
        android:elevation="10dp"
        android:translationZ="9dp"/>


</LinearLayout>
</LinearLayout>